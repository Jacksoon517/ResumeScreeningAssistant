{
  "manifest_version": 3,
  "name": "Resume Screening Assistant",
  "version": "1.0",
  "description": "在简历筛选过程中快速给出候选人的分数和摘要。通过本地评分逻辑和豆包大模型的摘要评估，辅助 HR 做出决策。",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "简历筛选助手"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "https://ark.cn-beijing.volces.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["floater.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://*"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.js",
        "libs/jszip.min.js",
        "scoring.py",
        "panel.html",
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}